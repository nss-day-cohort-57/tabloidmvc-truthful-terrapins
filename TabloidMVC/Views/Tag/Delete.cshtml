@model TabloidMVC.Models.Tag

@{
    ViewData["Title"] = "Delete";
}

<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="card col-md-12 col-lg-8">
            <h3 class="mt-3 text-primary text-center card-title">Are you sure you want to delete this Tag?</h3>
            <form class="mt-5 card-body" asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <p class="text-secondary">Tag to be Deleted:</p>
                </div>
                <div class="form-group">
                    <p class="text-secondary">@Model.Name</p>
                </div>
                <div>
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

