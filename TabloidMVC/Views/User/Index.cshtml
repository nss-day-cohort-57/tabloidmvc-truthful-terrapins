@model IEnumerable<TabloidMVC.Models.UserProfile>

@{
    ViewData["Users"] = "Index";
}

<div class="container pt-5">

<h1>List of Current Users</h1>

<table class="table table-striped">
    <tbody>
        <thread>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserType)
                </th>
                <th></th>
            </tr>
        </thread>

@foreach (var item in Model) {
     
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserType.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Details">
                            <i class="fas fa-eye"></i></a>
            </td>
        </tr>

}
    </tbody>
</table>
</div>