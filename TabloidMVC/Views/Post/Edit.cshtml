@model TabloidMVC.Models.ViewModels.PostCreateViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="card col-md-12 col-lg-8">
            <h3 class="mt-3 text-primary text-center card-title">What do you want to change?</h3>
            <form class="mt-5 card-body" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="@Model.Post.Id" type="hidden" />
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Post.CreateDateTime" type="hidden" />
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Post.UserProfileId" type="hidden" />
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Post.IsApproved" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Post.Title" class="control-label"></label>
                    <input asp-for="@Model.Post.Title" class="form-control" />
                    <span asp-validation-for="@Model.Post.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Post.ImageLocation" class="control-label"></label>
                    <input asp-for="@Model.Post.ImageLocation" class="form-control" />
                    <span asp-validation-for="@Model.Post.ImageLocation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Post.PublishDateTime" class="control-label"></label>
                    <input asp-for="@Model.Post.PublishDateTime" class="form-control" />
                    <span asp-validation-for="@Model.Post.PublishDateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Post.CategoryId" class="control-label"></label>
                    <select asp-for="@Model.Post.CategoryId" class="form-control">
                        @foreach (var category in Model.CategoryOptions)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.Post.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Post.Content" class="control-label"></label>
                    <textarea asp-for="@Model.Post.Content" rows="15" class="form-control post__content-input"></textarea>
                    <span asp-validation-for="@Model.Post.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="SAVE" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
